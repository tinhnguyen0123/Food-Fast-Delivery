##############################################
# Đăng ký user mới
##############################################
POST http://localhost:5000/api/auth/register
Content-Type: application/json

{
  "name": "Test User",
  "email": "testuser@example.com",
  "password": "123456",
  "phone": "0123456789",
  "role": "customer"
}

###

##############################################
# Đăng nhập
##############################################
POST http://localhost:5000/api/auth/login
Content-Type: application/json

{
  "email": "testuser@example.com",
  "password": "654321"
}

